<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NewsDetailsActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbarHolder"/>

    <TextView
        android:id="@+id/tv_headline"
        android:layout_below="@+id/toolbarHolder"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_size_18sp"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_headline_thumb"
        android:layout_below="@+id/tv_headline"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_250dp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_headline_thumb"/>


    <TextView
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:textColor="@color/black"
        android:layout_below="@+id/tv_date"/>




</RelativeLayout>